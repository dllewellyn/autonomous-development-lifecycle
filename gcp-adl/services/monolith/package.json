{
  "name": "@gcp-adl/monolith",
  "version": "0.1.0",
  "description": "Unified GCP ADL Service - Probot-based GitHub App",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && cp -r src/public dist/",
    "start": "probot run ./dist/index.js",
    "dev": "npm run build && probot run ./dist/index.js",
    "test": "jest",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@gcp-adl/gemini": "file:../../shared/gemini",
    "@gcp-adl/github": "file:../../shared/github",
    "@gcp-adl/jules": "file:../../shared/jules",
    "@gcp-adl/state": "file:../../shared/state",
    "@octokit/rest": "^22.0.1",
    "@types/csv-stringify": "^1.4.3",
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "csv-stringify": "^6.6.0",
    "domhandler": "^5.0.3",
    "express": "^4.18.2",
    "probot": "^13.4.7",
    "simple-git": "^3.30.0",
    "smee-client": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@playwright/test": "^1.57.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "ts-node": {
    "esm": false,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": "prettier --write",
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "jest --findRelatedTests"
    ]
  }
}
